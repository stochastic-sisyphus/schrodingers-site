---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Stochastic Sisyphus - A quantum homepage experience" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Locked Palette v5 - CSS Custom Properties */
    --color-bg-dark: #0a0e17;
    --color-bg-medium: #1a1f2e;
    --color-accent-primary: #00d4ff;
    --color-accent-secondary: #7c3aed;
    --color-accent-tertiary: #ec4899;
    --color-text-primary: #e2e8f0;
    --color-text-secondary: #94a3b8;
    --color-glow: rgba(0, 212, 255, 0.5);
    
    /* Gradients */
    --gradient-base: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-medium) 100%);
    --gradient-accent: linear-gradient(135deg, var(--color-accent-primary) 0%, var(--color-accent-secondary) 50%, var(--color-accent-tertiary) 100%);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    background: var(--gradient-base);
    color: var(--color-text-primary);
  }
</style>
