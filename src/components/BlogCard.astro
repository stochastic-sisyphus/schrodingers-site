---
/**
 * BlogCard component - Ethereal floating card with atmospheric depth
 * Inspired by Observable notebooks - living computational documents
 */

export interface Props {
  title: string;
  date: Date;
  excerpt: string;
  tags: string[];
  slug?: string;
  substackUrl?: string;
  isExternal?: boolean;
}

const { title, date, excerpt, tags, slug, substackUrl, isExternal = false } = Astro.props;

const href = isExternal ? substackUrl : `/blog/${slug}`;
const target = isExternal ? '_blank' : '_self';
const rel = isExternal ? 'noopener noreferrer' : undefined;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a
  href={href}
  class="blog-card"
  target={target}
  rel={rel}
  aria-label={`Read blog post: ${title}`}
>
  <!-- Atmospheric glow layers -->
  <div class="glow-layer glow-top" aria-hidden="true"></div>
  <div class="glow-layer glow-center" aria-hidden="true"></div>

  <div class="card-content">
    <div class="card-meta">
      <time datetime={date.toISOString()} class="card-date">
        {formattedDate}
      </time>
      {isExternal && <span class="external-badge">substack</span>}
    </div>

    <h2 class="card-title">{title}</h2>

    <p class="card-excerpt">{excerpt}</p>

    {tags.length > 0 && (
      <div class="card-tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </div>

  <!-- Luminous edge indicator -->
  <div class="edge-glow" aria-hidden="true"></div>
</a>

<style>
  .blog-card {
    background: var(--depth-1);
    backdrop-filter: var(--blur-heavy);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 16px;
    padding: 0;
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(166, 182, 194, 0.1);
    transition: all var(--duration-medium) var(--ease-smooth);
    will-change: transform, box-shadow;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 50% 0%,
      rgba(166, 182, 194, 0.08) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity var(--duration-medium) var(--ease-smooth);
    pointer-events: none;
  }

  /* Atmospheric glow layers */
  .glow-layer {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0;
    transition: opacity var(--duration-long) var(--ease-smooth);
    filter: blur(40px);
  }

  .glow-top {
    top: -60px;
    left: 20%;
    width: 200px;
    height: 120px;
    background: radial-gradient(
      circle,
      rgba(166, 182, 194, 0.15) 0%,
      transparent 70%
    );
  }

  .glow-center {
    top: 50%;
    right: -40px;
    width: 160px;
    height: 160px;
    background: radial-gradient(
      circle,
      rgba(132, 152, 166, 0.1) 0%,
      transparent 70%
    );
    transform: translateY(-50%);
  }

  /* Luminous edge indicator */
  .edge-glow {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(166, 182, 194, 0.4) 30%,
      rgba(166, 182, 194, 0.6) 50%,
      rgba(166, 182, 194, 0.4) 70%,
      transparent 100%
    );
    opacity: 0;
    transition: all var(--duration-medium) var(--ease-smooth);
    box-shadow: 0 0 12px rgba(166, 182, 194, 0.3);
  }

  .card-content {
    position: relative;
    z-index: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    min-height: 280px;
  }

  /* Hover state - ethereal lift */
  .blog-card:hover {
    background: var(--depth-1);
    border-color: rgba(166, 182, 194, 0.35);
    transform: translateY(-8px);
    box-shadow:
      0 16px 48px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(166, 182, 194, 0.2),
      inset 0 1px 0 rgba(166, 182, 194, 0.15);
  }

  .blog-card:hover::before {
    opacity: 1;
  }

  .blog-card:hover .glow-top,
  .blog-card:hover .glow-center {
    opacity: 1;
  }

  .blog-card:hover .edge-glow {
    opacity: 1;
    width: 4px;
  }

  /* Metadata - computational aesthetic */
  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8125rem;
    color: var(--accent);
    opacity: 0.85;
  }

  .card-date {
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.02em;
  }

  .external-badge {
    padding: 0.25rem 0.625rem;
    background: rgba(166, 182, 194, 0.12);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 6px;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--highlight);
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .blog-card:hover .external-badge {
    background: rgba(166, 182, 194, 0.18);
    border-color: rgba(166, 182, 194, 0.25);
  }

  /* Title - ethereal serif */
  .card-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.875rem;
    font-weight: 400;
    color: var(--text-heading);
    margin: 0;
    line-height: 1.3;
    letter-spacing: 0.01em;
    transition: all var(--duration-short) var(--ease-smooth);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .blog-card:hover .card-title {
    color: var(--text-heading);
    text-shadow: 0 2px 8px rgba(166, 182, 194, 0.3);
    transform: translateX(2px);
  }

  /* Excerpt - readable body text */
  .card-excerpt {
    color: var(--text-body);
    line-height: 1.7;
    margin: 0;
    flex-grow: 1;
    font-size: 0.9375rem;
    opacity: 0.9;
  }

  /* Tags - subtle computational markers */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(166, 182, 194, 0.08);
  }

  .tag {
    padding: 0.3rem 0.75rem;
    background: rgba(166, 182, 194, 0.08);
    border: 1px solid rgba(166, 182, 194, 0.12);
    border-radius: 6px;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    color: var(--accent);
    transition: all var(--duration-short) var(--ease-smooth);
    letter-spacing: 0.02em;
  }

  .blog-card:hover .tag {
    background: rgba(166, 182, 194, 0.12);
    border-color: rgba(166, 182, 194, 0.2);
    color: var(--highlight);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .card-content {
      padding: 1.75rem;
      min-height: 240px;
      gap: 0.875rem;
    }

    .card-title {
      font-size: 1.625rem;
    }

    .card-excerpt {
      font-size: 0.875rem;
    }

    .glow-top,
    .glow-center {
      display: none; /* Simplify on mobile for performance */
    }
  }
</style>
