---
/**
 * BlogCard component - Frosted glass card for blog posts
 */

export interface Props {
  title: string;
  date: Date;
  excerpt: string;
  tags: string[];
  slug?: string;
  substackUrl?: string;
  isExternal?: boolean;
}

const { title, date, excerpt, tags, slug, substackUrl, isExternal = false } = Astro.props;

const href = isExternal ? substackUrl : `/blog/${slug}`;
const target = isExternal ? '_blank' : '_self';
const rel = isExternal ? 'noopener noreferrer' : undefined;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a
  href={href}
  class="blog-card frosted-glass"
  target={target}
  rel={rel}
>
  <div class="card-meta">
    <time datetime={date.toISOString()}>
      {formattedDate}
    </time>
    {isExternal && <span class="external-badge">via Substack</span>}
  </div>

  <h2 class="card-title">{title}</h2>

  <p class="card-excerpt">{excerpt}</p>

  {tags.length > 0 && (
    <div class="card-tags">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
</a>

<style>
  .blog-card {
    background: linear-gradient(
      135deg,
      rgba(42, 56, 68, 0.4) 0%,
      rgba(42, 56, 68, 0.6) 100%
    );
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 0;
    padding: 0;
    text-decoration: none;
    color: inherit;
    box-shadow: none;
    transition: all var(--duration-medium) var(--ease-smooth);
    display: block;
    position: relative;
    overflow: hidden;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 2px;
    height: 100%;
    background: linear-gradient(
      180deg,
      transparent 0%,
      var(--highlight) 50%,
      transparent 100%
    );
    opacity: 0.3;
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .blog-card:hover {
    background: linear-gradient(
      135deg,
      rgba(42, 56, 68, 0.6) 0%,
      rgba(42, 56, 68, 0.8) 100%
    );
    border-color: rgba(166, 182, 194, 0.3);
    box-shadow: 0 0 40px rgba(166, 182, 194, 0.1);
    transform: translateX(8px);
  }

  .blog-card:hover::before {
    opacity: 0.8;
    box-shadow: 0 0 20px rgba(166, 182, 194, 0.5);
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--accent);
  }

  time {
    font-variant-numeric: tabular-nums;
  }

  .external-badge {
    padding: 0.25rem 0.5rem;
    background: rgba(166, 182, 194, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--highlight);
    margin: 0;
    line-height: 1.3;
    transition: color var(--duration-short) var(--ease-smooth);
  }

  .blog-card:hover .card-title {
    color: var(--text-heading);
  }

  .card-excerpt {
    color: var(--text-body);
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(166, 182, 194, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
    color: var(--highlight);
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .blog-card:hover .tag {
    background: rgba(166, 182, 194, 0.15);
  }

  @media (max-width: 768px) {
    .blog-card {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.5rem;
    }
  }
</style>
