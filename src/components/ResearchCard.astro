---
/**
 * ResearchCard component - Ethereal floating card with atmospheric depth
 * Living research artifacts, not static publication cards
 */

export interface Props {
  id: string;
  title: string;
  authors: string[];
  year: number;
  journal?: string;
  doi?: string;
  orcidUrl?: string;
  abstract?: string;
  type: string;
  isLocal?: boolean;
}

const {
  id,
  title,
  authors,
  year,
  journal,
  doi,
  orcidUrl,
  abstract,
  type,
  isLocal = false
} = Astro.props;

const href = isLocal
  ? `/research/${id}`
  : doi
    ? `https://doi.org/${doi}`
    : orcidUrl || '#';

const isLink = href !== '#';
const target = isLocal ? '_self' : '_blank';
const rel = isLocal ? undefined : 'noopener noreferrer';

// Truncate abstract for preview
const abstractPreview = abstract
  ? abstract.length > 220
    ? `${abstract.slice(0, 220)}...`
    : abstract
  : null;
---

<article class="research-card">
  <!-- Atmospheric glow layers -->
  <div class="glow-layer glow-top" aria-hidden="true"></div>
  <div class="glow-layer glow-center" aria-hidden="true"></div>

  <div class="card-content">
    <!-- Metadata header - computational aesthetic -->
    <div class="card-header">
      <div class="card-meta">
        <span class="year">{year}</span>
        {journal && <span class="journal-divider">Â·</span>}
        {journal && <span class="journal">{journal}</span>}
      </div>
      <div class="card-badges">
        <span class="type-badge">{type}</span>
        {isLocal && <span class="local-badge">featured</span>}
      </div>
    </div>

    <!-- Title - ethereal serif -->
    {isLink ? (
      <h3 class="card-title">
        <a href={href} target={target} rel={rel}>{title}</a>
      </h3>
    ) : (
      <h3 class="card-title">{title}</h3>
    )}

    <!-- Authors - subtle metadata -->
    {authors.length > 0 && (
      <p class="card-authors">{authors.join(', ')}</p>
    )}

    <!-- Abstract preview -->
    {abstractPreview && (
      <p class="card-abstract">{abstractPreview}</p>
    )}

    <!-- DOI link - computational marker -->
    {doi && (
      <div class="card-footer">
        <a
          href={`https://doi.org/${doi}`}
          class="doi-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          doi:{doi}
        </a>
      </div>
    )}
  </div>

  <!-- Luminous edge indicator -->
  <div class="edge-glow" aria-hidden="true"></div>
</article>

<style>
  .research-card {
    background: var(--depth-1);
    backdrop-filter: var(--blur-heavy);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 16px;
    padding: 0;
    position: relative;
    overflow: hidden;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(166, 182, 194, 0.1);
    transition: all var(--duration-medium) var(--ease-smooth);
    will-change: transform, box-shadow;
  }

  .research-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 50% 0%,
      rgba(166, 182, 194, 0.08) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity var(--duration-medium) var(--ease-smooth);
    pointer-events: none;
  }

  /* Atmospheric glow layers */
  .glow-layer {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0;
    transition: opacity var(--duration-long) var(--ease-smooth);
    filter: blur(40px);
  }

  .glow-top {
    top: -60px;
    left: 20%;
    width: 200px;
    height: 120px;
    background: radial-gradient(
      circle,
      rgba(166, 182, 194, 0.15) 0%,
      transparent 70%
    );
  }

  .glow-center {
    top: 50%;
    right: -40px;
    width: 160px;
    height: 160px;
    background: radial-gradient(
      circle,
      rgba(132, 152, 166, 0.1) 0%,
      transparent 70%
    );
    transform: translateY(-50%);
  }

  /* Luminous edge indicator */
  .edge-glow {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(166, 182, 194, 0.4) 30%,
      rgba(166, 182, 194, 0.6) 50%,
      rgba(166, 182, 194, 0.4) 70%,
      transparent 100%
    );
    opacity: 0;
    transition: all var(--duration-medium) var(--ease-smooth);
    box-shadow: 0 0 12px rgba(166, 182, 194, 0.3);
  }

  .card-content {
    position: relative;
    z-index: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Hover state - ethereal lift */
  .research-card:hover {
    background: var(--depth-1);
    border-color: rgba(166, 182, 194, 0.35);
    transform: translateY(-8px);
    box-shadow:
      0 16px 48px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(166, 182, 194, 0.2),
      inset 0 1px 0 rgba(166, 182, 194, 0.15);
  }

  .research-card:hover::before {
    opacity: 1;
  }

  .research-card:hover .glow-top,
  .research-card:hover .glow-center {
    opacity: 1;
  }

  .research-card:hover .edge-glow {
    opacity: 1;
    width: 4px;
  }

  /* Card header - metadata row */
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8125rem;
    color: var(--accent);
    opacity: 0.85;
  }

  .year {
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.02em;
    font-weight: 600;
  }

  .journal-divider {
    opacity: 0.4;
  }

  .journal {
    font-style: italic;
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .card-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .type-badge {
    padding: 0.25rem 0.625rem;
    background: rgba(166, 182, 194, 0.12);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 6px;
    font-size: 0.6875rem;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--highlight);
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .local-badge {
    padding: 0.25rem 0.625rem;
    background: rgba(166, 182, 194, 0.15);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 6px;
    font-size: 0.6875rem;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-heading);
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .research-card:hover .type-badge,
  .research-card:hover .local-badge {
    background: rgba(166, 182, 194, 0.18);
    border-color: rgba(166, 182, 194, 0.25);
  }

  /* Title - ethereal serif */
  .card-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.875rem;
    font-weight: 400;
    color: var(--text-heading);
    margin: 0;
    line-height: 1.3;
    letter-spacing: 0.01em;
    transition: all var(--duration-short) var(--ease-smooth);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .card-title a {
    color: inherit;
    text-decoration: none;
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .research-card:hover .card-title,
  .research-card:hover .card-title a {
    color: var(--text-heading);
    text-shadow: 0 2px 8px rgba(166, 182, 194, 0.3);
    transform: translateX(2px);
  }

  /* Authors - subtle metadata */
  .card-authors {
    font-size: 0.9375rem;
    color: var(--text-body);
    margin: 0;
    line-height: 1.6;
    opacity: 0.85;
  }

  /* Abstract preview - readable body text */
  .card-abstract {
    color: var(--text-body);
    line-height: 1.7;
    margin: 0;
    font-size: 0.9375rem;
    opacity: 0.9;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(166, 182, 194, 0.08);
  }

  /* Footer - DOI link */
  .card-footer {
    display: flex;
    align-items: center;
    margin-top: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(166, 182, 194, 0.08);
  }

  .doi-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    letter-spacing: 0.02em;
    opacity: 0.8;
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .doi-link:hover,
  .research-card:hover .doi-link {
    color: var(--highlight);
    opacity: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .card-content {
      padding: 1.75rem;
      gap: 0.875rem;
    }

    .card-title {
      font-size: 1.625rem;
    }

    .card-abstract {
      font-size: 0.875rem;
    }

    .glow-top,
    .glow-center {
      display: none; /* Simplify on mobile for performance */
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>
