---
interface Props {
  title: string;
  description: string;
  canonical: string;
  image?: string;
}

const { title, description, canonical, image } = Astro.props;
const fullTitle = `${title} | stochastic-sisyphus`;
const siteUrl = "https://stochastic-sisyphus.pages.dev";
const fullImage = image ? `${siteUrl}${image}` : undefined;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />

{/* Open Graph */}
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonical} />
<meta property="og:type" content="website" />
<meta property="og:image" content={fullImage || `${siteUrl}/og-image.jpg`} />

{/* Twitter Card */}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImage || `${siteUrl}/og-image.jpg`} />

{/* JSON-LD Structured Data */}
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Vanessa Beck",
  "alternateName": "stochastic-sisyphus",
  "url": siteUrl,
  "description": description,
  "sameAs": [
    "https://github.com/stochastic-sisyphus",
    "https://orcid.org/0009-0008-6611-535X",
    "https://stochasticsisyphus.substack.com/"
  ]
})} />
