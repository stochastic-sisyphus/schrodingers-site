---
import { getCollection } from 'astro:content';
import { fetchAllRepos, getFeaturedRepos } from '../lib/github';
import Atmosphere from '../components/Atmosphere.astro';
import ProjectCard from '../components/ProjectCard.svelte';
import BlogCard from '../components/BlogCard.astro';
import ResearchCard from '../components/ResearchCard.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

const allRepos = await fetchAllRepos();
const featuredRepos = allRepos.length > 0 ? getFeaturedRepos(allRepos).slice(0, 3) : [];
const projectsFromContent = await getCollection('projects');
const featuredProjects = featuredRepos.length > 0
  ? featuredRepos
  : projectsFromContent.filter(p => p.data.featured).slice(0, 3);

const allBlogPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allBlogPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const allResearch = await getCollection('research');
const keyResearch = allResearch.filter(({ data }) => data.featured).slice(0, 3);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500;600&display=swap" rel="stylesheet" />
    <SEO title="Vanessa Beck" description="Machine learning research. Transformers, semantic search, NLP." canonical={Astro.url.href} />
  </head>
  <body>
    <Atmosphere />

    <div class="page">
      <header class="header">
        <h1>Vanessa Beck</h1>
        <p class="handle">@stochastic-sisyphus</p>
        <p class="bio">Machine learning · Semantic search · NLP</p>
        <nav>
          <a href="/research">Research</a>
          <a href="/projects">Projects</a>
          <a href="/blog">Writing</a>
          <a href="/about">About</a>
        </nav>
      </header>

      <main>
        {keyResearch.length > 0 && (
          <section>
            <h2>Research</h2>
            {keyResearch.map((paper) => (
              <ResearchCard
                id={paper.slug}
                title={paper.data.title}
                authors={paper.data.authors}
                year={paper.data.year}
                journal={paper.data.journal}
                doi={paper.data.doi}
                orcidUrl={paper.data.orcidUrl}
                abstract={paper.data.abstract}
                type={paper.data.type}
                isLocal={true}
              />
            ))}
          </section>
        )}

        {featuredProjects.length > 0 && (
          <section>
            <h2>Featured Work</h2>
            <div class="grid">
              {featuredProjects.map((item) => {
                const repo = 'data' in item ? {
                  name: item.data.name,
                  description: item.data.description,
                  html_url: item.data.githubUrl,
                  homepage: item.data.homepage || null,
                  stargazers_count: item.data.stars || 0,
                  language: item.data.language || null,
                  topics: item.data.tags || [],
                } : item;
                return <ProjectCard repo={repo} featured={true} client:visible />;
              })}
            </div>
            <a href="/projects" class="more">View all →</a>
          </section>
        )}

        {recentPosts.length > 0 && (
          <section>
            <h2>Writing</h2>
            {recentPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                date={post.data.date}
                excerpt={post.data.excerpt}
                tags={post.data.tags}
                slug={post.slug}
                substackUrl={post.data.substackUrl}
                isExternal={!!post.data.substackUrl}
              />
            ))}
            <a href="/blog" class="more">Read all →</a>
          </section>
        )}
      </main>
    </div>

    <Footer />
  </body>
</html>

<style>
  body {
    font-family: 'EB Garamond', Georgia, serif;
  }

  .page {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header {
    padding: 6rem 0 4rem;
    text-align: center;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.25rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    color: var(--text-heading);
    margin: 0 0 0.75rem;
  }

  .handle {
    font-size: 1.125rem;
    color: var(--accent);
    margin: 0 0 1rem;
    font-weight: 400;
  }

  .bio {
    font-size: 1.0625rem;
    color: var(--light);
    margin: 0 0 2.5rem;
  }

  nav {
    display: flex;
    gap: 2.5rem;
    justify-content: center;
  }

  nav a {
    font-size: 1.0625rem;
    color: var(--text-body);
    text-decoration: none;
    position: relative;
    transition: color 0.25s;
  }

  nav a::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.25s;
  }

  nav a:hover {
    color: var(--text-heading);
  }

  nav a:hover::after {
    transform: scaleX(1);
  }

  main {
    padding-bottom: 4rem;
  }

  section {
    margin-bottom: 5rem;
  }

  h2 {
    font-size: 1.875rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    color: var(--text-heading);
    margin: 0 0 2rem;
  }

  .grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .more {
    display: inline-block;
    margin-top: 1.5rem;
    font-size: 1.0625rem;
    color: var(--text-body);
    text-decoration: none;
    border-bottom: 1px solid var(--accent);
    padding-bottom: 1px;
    transition: color 0.25s;
  }

  .more:hover {
    color: var(--text-heading);
  }

  @media (max-width: 768px) {
    .header {
      padding: 4rem 0 3rem;
    }

    nav {
      gap: 2rem;
    }
  }
</style>
