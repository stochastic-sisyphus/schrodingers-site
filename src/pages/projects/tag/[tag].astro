---
/**
 * Tag-filtered project pages
 */

import ContentLayout from '@/layouts/ContentLayout.astro';
import { fetchAllRepos } from '@/lib/github';
import ProjectCard from '@/components/ProjectCard.svelte';

export async function getStaticPaths() {
  const repos = await fetchAllRepos();

  // Extract all unique tags
  const allTopics = [...new Set(repos.flatMap(r => r.topics))];

  // Generate a page for each tag
  return allTopics.map((tag) => {
    const filteredRepos = repos.filter((repo) =>
      repo.topics.includes(tag)
    );

    // Sort by stars
    filteredRepos.sort((a, b) => b.stargazers_count - a.stargazers_count);

    return {
      params: { tag },
      props: {
        tag,
        repos: filteredRepos,
        totalRepos: repos.length,
      },
    };
  });
}

interface Props {
  tag: string;
  repos: Awaited<ReturnType<typeof fetchAllRepos>>;
  totalRepos: number;
}

const { tag, repos, totalRepos } = Astro.props;

const title = `${tag} Projects | stochastic-sisyphus`;
const description = `Projects tagged with ${tag}. ${repos.length} of ${totalRepos} total projects.`;
---

<ContentLayout title={title} description={description}>
  <article class="tag-page">
    <header class="page-header">
      <nav class="breadcrumb">
        <a href="/projects">projects</a>
        <span class="separator">/</span>
        <span class="current">{tag}</span>
      </nav>

      <h1 class="page-title">
        <span class="tag-label">tag:</span>
        <span class="tag-name">{tag}</span>
      </h1>

      <p class="page-description">
        {repos.length} project{repos.length !== 1 ? 's' : ''} tagged with <strong>{tag}</strong>
      </p>

      <div class="quick-links">
        <a href="/projects" class="back-link">
          ‚Üê View all projects
        </a>
      </div>
    </header>

    <section class="projects-section">
      {repos.length > 0 ? (
        <div class="projects-grid">
          {repos.map((repo) => (
            <ProjectCard repo={repo} client:visible />
          ))}
        </div>
      ) : (
        <div class="no-projects">
          <p>No projects found with the tag "{tag}"</p>
          <a href="/projects" class="back-link">View all projects</a>
        </div>
      )}
    </section>
  </article>
</ContentLayout>

<style>
  .tag-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    margin-bottom: 4rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: var(--highlight);
    margin-bottom: 2rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .breadcrumb a {
    color: var(--highlight);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb a:hover {
    color: var(--highlight);
  }

  .separator {
    color: var(--mid);
  }

  .current {
    color: var(--highlight);
  }

  .page-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(40px, 5vw, 64px);
    font-weight: 300;
    color: var(--highlight);
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .tag-label {
    font-size: 0.6em;
    color: var(--highlight);
    font-weight: 400;
  }

  .tag-name {
    background: linear-gradient(135deg, var(--accent), var(--highlight));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 400;
  }

  .page-description {
    color: var(--highlight);
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    max-width: 800px;
  }

  .page-description strong {
    color: var(--highlight);
    font-family: 'JetBrains Mono', monospace;
    font-weight: 500;
  }

  .quick-links {
    display: flex;
    gap: 1.5rem;
  }

  .back-link {
    color: var(--highlight);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    padding: 0.625rem 1.25rem;
    background: rgba(68, 88, 104, 0.1);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .back-link:hover {
    color: var(--highlight);
    background: rgba(68, 88, 104, 0.15);
    border-color: rgba(166, 182, 194, 0.3);
    transform: translateX(-2px);
  }

  .projects-section {
    margin-bottom: 4rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .no-projects {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--highlight);
  }

  .no-projects p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .tag-page {
      padding: 1.5rem 1rem;
    }

    .page-title {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .page-description {
      font-size: 1rem;
    }
  }
</style>
