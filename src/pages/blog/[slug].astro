---
/**
 * Individual blog post page - Computational notebook aesthetic
 * Deep reading experience with atmospheric depth
 */

import ContentLayout from '@/layouts/ContentLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<ContentLayout title={`${post.data.title} | stochastic-sisyphus`} description={post.data.excerpt}>
  <article class="blog-post">
    <!-- Atmospheric glow layers -->
    <div class="post-glow post-glow-top" aria-hidden="true"></div>
    <div class="post-glow post-glow-bottom" aria-hidden="true"></div>

    <div class="post-container">
      <header class="post-header">
        <h1 class="post-title">{post.data.title}</h1>

        <div class="post-meta">
          <time datetime={post.data.date.toISOString()} class="post-date">
            {formattedDate}
          </time>

          {post.data.substackUrl && (
            <a
              href={post.data.substackUrl}
              class="substack-link"
              target="_blank"
              rel="noopener noreferrer"
            >
              read on substack →
            </a>
          )}
        </div>

        {post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <div class="post-content">
        <Content />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="back-link">
          <span class="back-arrow">←</span>
          <span>Back to writing</span>
        </a>
      </footer>
    </div>
  </article>
</ContentLayout>

<style>
  .blog-post {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
  }

  /* Atmospheric glow layers */
  .post-glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    filter: blur(80px);
    opacity: 0.4;
  }

  .post-glow-top {
    top: -120px;
    right: 10%;
    width: 400px;
    height: 300px;
    background: radial-gradient(
      ellipse,
      rgba(166, 182, 194, 0.15) 0%,
      rgba(132, 152, 166, 0.08) 50%,
      transparent 80%
    );
  }

  .post-glow-bottom {
    bottom: 20%;
    left: -10%;
    width: 350px;
    height: 350px;
    background: radial-gradient(
      circle,
      rgba(132, 152, 166, 0.1) 0%,
      transparent 70%
    );
  }

  /* Main container with frosted glass */
  .post-container {
    background: var(--depth-1);
    backdrop-filter: var(--blur-heavy);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 20px;
    padding: 4rem;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(166, 182, 194, 0.1);
    position: relative;
    z-index: 1;
  }

  .post-container::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 50% 0%,
      rgba(166, 182, 194, 0.06) 0%,
      transparent 60%
    );
    border-radius: 20px;
    pointer-events: none;
  }

  /* Header styling */
  .post-header {
    margin-bottom: 4rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid rgba(166, 182, 194, 0.12);
    position: relative;
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 400;
    color: var(--text-heading);
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    letter-spacing: 0.01em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  /* Metadata - computational aesthetic */
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8125rem;
    color: var(--accent);
    margin-bottom: 1.25rem;
    opacity: 0.85;
  }

  .post-date {
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.02em;
  }

  .substack-link {
    color: var(--highlight);
    text-decoration: none;
    font-size: 0.8125rem;
    transition: all var(--duration-short) var(--ease-smooth);
    padding: 0.375rem 0.875rem;
    background: rgba(166, 182, 194, 0.08);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 6px;
    letter-spacing: 0.02em;
  }

  .substack-link:hover {
    background: rgba(166, 182, 194, 0.12);
    border-color: rgba(166, 182, 194, 0.25);
    color: var(--text-heading);
    transform: translateX(2px);
  }

  /* Tags */
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .tag {
    padding: 0.375rem 0.875rem;
    background: rgba(166, 182, 194, 0.08);
    border: 1px solid rgba(166, 182, 194, 0.12);
    border-radius: 6px;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    color: var(--accent);
    letter-spacing: 0.02em;
  }

  /* Content typography - elegant readability */
  .post-content {
    color: var(--text-body);
    line-height: 1.8;
    font-size: 1.0625rem;
    position: relative;
  }

  .post-content :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.25rem;
    font-weight: 400;
    color: var(--text-heading);
    margin: 3.5rem 0 1.25rem;
    line-height: 1.3;
    letter-spacing: 0.01em;
  }

  .post-content :global(h3) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--text-heading);
    margin: 2.5rem 0 1rem;
    line-height: 1.3;
  }

  .post-content :global(h4) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--highlight);
    margin: 2rem 0 0.75rem;
  }

  .post-content :global(p) {
    margin: 1.5rem 0;
  }

  .post-content :global(a) {
    color: var(--highlight);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .post-content :global(a:hover) {
    color: var(--text-heading);
    text-decoration-thickness: 2px;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin: 0.625rem 0;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid rgba(166, 182, 194, 0.4);
    padding-left: 1.75rem;
    margin: 2rem 0;
    color: var(--highlight);
    font-style: italic;
    opacity: 0.95;
  }

  .post-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
    background: rgba(166, 182, 194, 0.12);
    padding: 0.2em 0.5em;
    border-radius: 4px;
    color: var(--highlight);
    border: 1px solid rgba(166, 182, 194, 0.15);
  }

  .post-content :global(pre) {
    background: rgba(20, 26, 32, 0.8);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 12px;
    padding: 1.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 2.5rem 0;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid rgba(166, 182, 194, 0.15);
    margin: 3.5rem 0;
  }

  /* Footer navigation */
  .post-footer {
    margin-top: 4rem;
    padding-top: 2.5rem;
    border-top: 1px solid rgba(166, 182, 194, 0.12);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--accent);
    text-decoration: none;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    letter-spacing: 0.02em;
    transition: all var(--duration-short) var(--ease-smooth);
    padding: 0.625rem 1.25rem;
    background: rgba(166, 182, 194, 0.06);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 8px;
  }

  .back-arrow {
    transition: transform var(--duration-short) var(--ease-smooth);
  }

  .back-link:hover {
    background: rgba(166, 182, 194, 0.1);
    border-color: rgba(166, 182, 194, 0.25);
    color: var(--highlight);
    transform: translateX(-4px);
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .post-container {
      padding: 2.5rem 1.75rem;
      border-radius: 16px;
    }

    .post-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
    }

    .post-title {
      font-size: 2rem;
      margin-bottom: 1.25rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.875rem;
      margin: 2.5rem 0 1rem;
    }

    .post-content :global(h3) {
      font-size: 1.5rem;
      margin: 2rem 0 0.875rem;
    }

    .post-glow-top,
    .post-glow-bottom {
      display: none; /* Simplify on mobile */
    }
  }
</style>
