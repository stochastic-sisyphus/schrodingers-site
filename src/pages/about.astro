---
/**
 * About page - Atmospheric identity exploration
 */

import ContentLayout from '@/layouts/ContentLayout.astro';
import { fetchORCIDProfile } from '@/lib/orcid';

const orcidProfile = await fetchORCIDProfile().catch(() => null);
---

<ContentLayout
  title="About | stochastic-sisyphus"
  description="Computational atmospheres exploring the intersection of code, data systems, and emergent patterns. A home for explorations, not a portfolio."
>
  <article class="about-page">
    <!-- Header with atmospheric depth -->
    <header class="page-header">
      <div class="header-glow" aria-hidden="true"></div>
      <h1 class="page-title">about</h1>
      <p class="page-subtitle">
        Identity as living data
      </p>
    </header>

    <!-- Bio section with enhanced depth -->
    <section class="bio-section float-in">
      <div class="bio-content">
        <p class="bio-text">
          <strong>stochastic-sisyphus</strong> explores computational atmospheres
          where identity and work exist as living data—revealed through color,
          depth, and elegant interaction.
        </p>

        <p class="bio-text">
          A home for explorations at the intersection of code, data systems, and
          emergent patterns. Not a portfolio, but an explorable system that feels
          like a polished instrument.
        </p>
      </div>
    </section>

    <!-- Connect section with atmospheric link cards -->
    <section class="links-section float-in">
      <div class="section-header">
        <h2 class="section-title">connect</h2>
        <span class="section-badge">network nodes</span>
      </div>

      <div class="links-grid">
        <a
          href="https://github.com/stochastic-sisyphus"
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">GitHub</span>
            <span class="link-meta">code repositories</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href="https://orcid.org/0009-0008-6611-535X"
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">ORCID</span>
            <span class="link-meta">research profile</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href="https://existentialjester.substack.com"
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">Substack</span>
            <span class="link-meta">writing stream</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a href="/blog/rss.xml" class="link-card">
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">RSS Feed</span>
            <span class="link-meta">syndication</span>
          </div>
          <span class="link-arrow">→</span>
        </a>
      </div>
    </section>

    <!-- Interests section with computational styling -->
    <section class="interests-section float-in">
      <div class="section-header">
        <h2 class="section-title">areas of exploration</h2>
        <span class="section-badge">research domains</span>
      </div>

      <div class="interests-grid">
        <div class="interest-card">
          <span class="interest-icon">∇</span>
          <span class="interest-label">Computational systems and emergent behavior</span>
        </div>
        <div class="interest-card">
          <span class="interest-icon">◆</span>
          <span class="interest-label">Data visualization and living code representations</span>
        </div>
        <div class="interest-card">
          <span class="interest-icon">○</span>
          <span class="interest-label">Atmospheric interfaces and spatial computing</span>
        </div>
        <div class="interest-card">
          <span class="interest-icon">△</span>
          <span class="interest-label">Metadata architectures and knowledge graphs</span>
        </div>
        <div class="interest-card">
          <span class="interest-icon">□</span>
          <span class="interest-label">Natural language processing and semantic search</span>
        </div>
        <div class="interest-card">
          <span class="interest-icon">◇</span>
          <span class="interest-label">Stochastic processes and probabilistic modeling</span>
        </div>
      </div>
    </section>
  </article>
</ContentLayout>

<script>
  // Atmospheric reveal on scroll
  import { initScrollAnimations } from '@/lib/scroll-animations';

  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations('.float-in');
  });
</script>

<style>
  .about-page {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
  }

  /* Header - atmospheric depth with glow (matching other pages) */
  .page-header {
    position: relative;
    margin-bottom: 5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(166, 182, 194, 0.08);
  }

  .header-glow {
    position: absolute;
    top: -100px;
    left: 8%;
    width: 440px;
    height: 220px;
    background: radial-gradient(
      ellipse,
      rgba(166, 182, 194, 0.16) 0%,
      rgba(132, 152, 166, 0.09) 40%,
      transparent 70%
    );
    filter: blur(60px);
    pointer-events: none;
    opacity: 0.8;
    animation: pulseGlow 8s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.1);
    }
  }

  .page-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(3rem, 7vw, 5.5rem);
    font-weight: 300;
    color: var(--text-heading);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    line-height: 1.1;
    text-shadow:
      0 2px 8px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(166, 182, 194, 0.1);
    position: relative;
    z-index: 1;
  }

  .page-subtitle {
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    color: var(--text-body);
    margin: 0;
    letter-spacing: 0.03em;
    opacity: 0.85;
    font-weight: 400;
    position: relative;
    z-index: 1;
  }

  /* Bio Section - enhanced atmospheric */
  .bio-section {
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .bio-content {
    max-width: 900px;
    padding: 3rem;
    background: var(--depth-1);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 16px;
    box-shadow: var(--shadow-soft);
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .bio-content:hover {
    background: rgba(42, 56, 68, 0.8);
    border-color: rgba(166, 182, 194, 0.25);
    box-shadow: var(--shadow-medium);
  }

  .bio-text {
    color: var(--text-body);
    font-size: 1.125rem;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
  }

  .bio-text:last-child {
    margin-bottom: 0;
  }

  .bio-text strong {
    color: var(--text-heading);
    font-weight: 500;
  }

  /* Sections - atmospheric spacing */
  .links-section,
  .interests-section {
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 400;
    color: var(--text-heading);
    margin: 0;
    letter-spacing: 0.02em;
    line-height: 1.2;
  }

  .section-badge {
    padding: 0.35rem 0.875rem;
    background: rgba(166, 182, 194, 0.1);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
    font-weight: 500;
  }

  /* Link Cards - atmospheric glow on hover */
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .link-card {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background: var(--depth-2);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 12px;
    text-decoration: none;
    overflow: hidden;
    box-shadow: var(--shadow-soft);
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .link-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(166, 182, 194, 0.2) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity var(--duration-medium) var(--ease-smooth);
    pointer-events: none;
  }

  .link-card:hover .link-glow {
    opacity: 1;
  }

  .link-card:hover {
    background: rgba(42, 56, 68, 0.9);
    border-color: rgba(166, 182, 194, 0.35);
    box-shadow:
      var(--shadow-medium),
      0 0 20px rgba(166, 182, 194, 0.15);
    transform: translateY(-4px);
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    position: relative;
    z-index: 1;
  }

  .link-label {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-heading);
  }

  .link-meta {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    letter-spacing: 0.02em;
    opacity: 0.8;
  }

  .link-arrow {
    font-size: 1.5rem;
    color: var(--highlight);
    transition: transform var(--duration-short) var(--ease-smooth);
    position: relative;
    z-index: 1;
  }

  .link-card:hover .link-arrow {
    transform: translateX(6px);
  }

  /* Interests Grid - computational styling */
  .interests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .interest-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.75rem;
    background: var(--depth-1);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 12px;
    box-shadow: var(--shadow-soft);
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .interest-card:hover {
    background: rgba(42, 56, 68, 0.8);
    border-color: rgba(166, 182, 194, 0.25);
    box-shadow: var(--shadow-medium);
    transform: translateY(-2px);
  }

  .interest-icon {
    font-size: 1.5rem;
    color: var(--highlight);
    line-height: 1;
    opacity: 0.7;
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .interest-card:hover .interest-icon {
    opacity: 1;
    transform: scale(1.1);
  }

  .interest-label {
    color: var(--text-body);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* Scroll-based reveal */
  .float-in {
    opacity: 0;
    transform: translateY(40px);
    filter: blur(8px);
    transition: opacity 0.8s var(--ease-smooth),
                transform 0.8s var(--ease-smooth),
                filter 0.8s var(--ease-smooth);
  }

  .float-in.is-visible {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .page-header {
      margin-bottom: 4rem;
      padding-bottom: 2.5rem;
    }

    .header-glow {
      width: 300px;
      height: 150px;
    }

    .bio-section,
    .links-section,
    .interests-section {
      margin-bottom: 4rem;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
    }

    .header-glow {
      width: 200px;
      height: 100px;
      top: -60px;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .page-subtitle {
      font-size: 0.875rem;
    }

    .bio-content {
      padding: 2rem;
    }

    .bio-text {
      font-size: 1rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }

    .interests-grid {
      grid-template-columns: 1fr;
    }

    .bio-section,
    .links-section,
    .interests-section {
      margin-bottom: 3rem;
    }

    .section-header {
      margin-bottom: 2rem;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .header-glow {
      animation: none;
      opacity: 0.6;
    }

    .float-in {
      transition: none;
      opacity: 1;
      transform: none;
      filter: none;
    }

    .link-card,
    .interest-card,
    .bio-content {
      transition: none;
    }
  }
</style>
