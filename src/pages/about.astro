---
/**
 * About page - Identity as living data
 */

import ContentLayout from '@/layouts/ContentLayout.astro';
import Footer from '@/components/Footer.astro';
import SEO from '@/components/SEO.astro';
import Navigation from '@/components/Navigation.astro';

// Import profile data
const profileData = await import('@/lib/profile.json');
const profile = profileData.default;
---

<ContentLayout
  title="About | stochastic-sisyphus"
  description={profile.bio}
>
  <SEO
    slot="head"
    title="About"
    description="Vanessa Beck - ML engineer specializing in transformers, semantic search, and NLP"
    canonical={Astro.url.href}
  />

  <Navigation slot="head" />

  <article class="about-page">
    <!-- Header -->
    <header class="page-header">
      <div class="header-glow" aria-hidden="true"></div>
      <h1 class="page-title">about</h1>
      <p class="page-subtitle">Identity as living data</p>
    </header>

    <!-- Identity Section -->
    <section class="identity-section float-in">
      <div class="identity-card glass-card">
        <div class="identity-header">
          <h2 class="identity-name">{profile.name}</h2>
          <span class="identity-pronouns">{profile.pronouns}</span>
        </div>
        <p class="identity-handle">@{profile.handle}</p>
        <p class="identity-title">{profile.title}</p>
      </div>
    </section>

    <!-- Bio Section -->
    <section class="bio-section float-in">
      <div class="section-header">
        <h2 class="section-title">the work</h2>
        <span class="section-badge">current focus</span>
      </div>
      <div class="bio-content glass-card">
        <p class="bio-text">{profile.bio}</p>
        <p class="bio-text bio-focus">{profile.currentFocus}</p>
      </div>
    </section>

    <!-- The Cycle Narrative -->
    <section class="narrative-section float-in">
      <div class="section-header">
        <h2 class="section-title">the cycle</h2>
        <span class="section-badge">perpetual uphill</span>
      </div>
      <div class="narrative-content glass-card">
        <p class="narrative-text">
          This is a snapshot of ongoing work—some projects work, some don't. Not every idea is worth a second push.
        </p>
        <p class="narrative-text">
          Every model optimized is another model that needs optimization. Every feature shipped reveals three more that should exist. The boulder keeps rolling uphill.
        </p>
        <p class="narrative-text narrative-tagline">
          Perpetually uphill.
        </p>
      </div>
    </section>

    <!-- Passion Statement -->
    <section class="passion-section float-in">
      <div class="section-header">
        <h2 class="section-title">passion statement</h2>
        <span class="section-badge">what matters</span>
      </div>
      <div class="passion-content glass-card">
        <p class="passion-text">
          The fact that I named my cat <strong class="passion-emphasis">{profile.cat.name}</strong> is a better passion statement than any string of words I can come up with.
        </p>
        <div class="passion-meta">
          <span class="cat-name">{profile.cat.name}</span>
          <span class="cat-role">{profile.cat.role}</span>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="skills-section float-in">
      <div class="section-header">
        <h2 class="section-title">technical stack</h2>
        <span class="section-badge">tools of trade</span>
      </div>
      <div class="skills-grid">
        {profile.skills.map((skill: string) => (
          <div class="skill-tag">
            <span class="skill-label">{skill}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Education Section -->
    <section class="education-section float-in">
      <div class="section-header">
        <h2 class="section-title">education</h2>
        <span class="section-badge">credentials</span>
      </div>
      <div class="education-content glass-card">
        <h3 class="education-degree">{profile.title}</h3>
        <p class="education-focus">Focus areas: {profile.focus.join(', ')}</p>
      </div>
    </section>

    <!-- Connect Section -->
    <section class="connect-section float-in">
      <div class="section-header">
        <h2 class="section-title">connect</h2>
        <span class="section-badge">network nodes</span>
      </div>
      <div class="links-grid">
        <a
          href={profile.socialLinks.github}
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">GitHub</span>
            <span class="link-meta">code repositories</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href={profile.socialLinks.orcid}
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">ORCID</span>
            <span class="link-meta">research profile</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href={profile.socialLinks.huggingface}
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">HuggingFace</span>
            <span class="link-meta">model hub</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href={profile.socialLinks.linkedin}
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">LinkedIn</span>
            <span class="link-meta">professional network</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a
          href={profile.socialLinks.substack}
          class="link-card"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">Substack</span>
            <span class="link-meta">writing stream</span>
          </div>
          <span class="link-arrow">→</span>
        </a>

        <a href="/blog/rss.xml" class="link-card">
          <div class="link-glow" aria-hidden="true"></div>
          <div class="link-content">
            <span class="link-label">RSS Feed</span>
            <span class="link-meta">syndication</span>
          </div>
          <span class="link-arrow">→</span>
        </a>
      </div>
    </section>
  </article>

  <Footer slot="footer" />
</ContentLayout>

<script>
  // Atmospheric reveal on scroll
  import { initScrollAnimations } from '@/lib/scroll-animations';

  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations('.float-in');
  });
</script>

<style>
  .about-page {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
  }

  /* Header - atmospheric depth */
  .page-header {
    position: relative;
    margin-bottom: 5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(166, 182, 194, 0.08);
  }

  .header-glow {
    position: absolute;
    top: -100px;
    left: 8%;
    width: 440px;
    height: 220px;
    background: radial-gradient(
      ellipse,
      rgba(166, 182, 194, 0.16) 0%,
      rgba(132, 152, 166, 0.09) 40%,
      transparent 70%
    );
    filter: blur(60px);
    pointer-events: none;
    opacity: 0.8;
    animation: pulseGlow 8s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.1);
    }
  }

  .page-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(3rem, 7vw, 5.5rem);
    font-weight: 300;
    color: var(--text-heading);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    line-height: 1.1;
    text-shadow:
      0 2px 8px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(166, 182, 194, 0.1);
    position: relative;
    z-index: 1;
  }

  .page-subtitle {
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    color: var(--text-body);
    margin: 0;
    letter-spacing: 0.03em;
    opacity: 0.85;
    font-weight: 400;
    position: relative;
    z-index: 1;
  }

  /* Sections */
  .identity-section,
  .bio-section,
  .narrative-section,
  .passion-section,
  .skills-section,
  .education-section,
  .connect-section {
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 400;
    color: var(--text-heading);
    margin: 0;
    letter-spacing: 0.02em;
    line-height: 1.2;
  }

  .section-badge {
    padding: 0.35rem 0.875rem;
    background: rgba(166, 182, 194, 0.1);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
    font-weight: 500;
  }

  /* Glass Card Base Style */
  .glass-card {
    padding: 3rem;
    background: var(--depth-2);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.15);
    border-radius: 16px;
    box-shadow: var(--shadow-soft), var(--shadow-medium);
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .glass-card:hover {
    background: rgba(42, 56, 68, 0.9);
    border-color: rgba(166, 182, 194, 0.25);
    box-shadow: var(--shadow-medium), var(--shadow-deep);
  }

  /* Identity Card */
  .identity-card {
    padding: 3rem;
  }

  .identity-header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .identity-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    color: var(--text-heading);
    margin: 0;
    letter-spacing: 0.01em;
  }

  .identity-pronouns {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: var(--accent);
    opacity: 0.8;
    letter-spacing: 0.02em;
  }

  .identity-handle {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9375rem;
    color: var(--accent);
    margin: 0 0 1rem 0;
    opacity: 0.7;
    letter-spacing: 0.02em;
  }

  .identity-title {
    font-size: 1.125rem;
    color: var(--text-body);
    margin: 0;
    font-weight: 500;
    letter-spacing: 0.01em;
  }

  /* Bio Content */
  .bio-content {
    padding: 3rem;
  }

  .bio-text {
    color: var(--text-body);
    font-size: 1.125rem;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
  }

  .bio-text:last-child {
    margin-bottom: 0;
  }

  .bio-focus {
    font-weight: 500;
    color: var(--text-heading);
  }

  /* Narrative Content */
  .narrative-content {
    padding: 3rem;
  }

  .narrative-text {
    color: var(--text-body);
    font-size: 1.125rem;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
  }

  .narrative-text:last-child {
    margin-bottom: 0;
  }

  .narrative-tagline {
    font-style: italic;
    color: var(--accent);
    font-weight: 500;
  }

  /* Passion Content */
  .passion-content {
    padding: 3rem;
  }

  .passion-text {
    color: var(--text-body);
    font-size: 1.25rem;
    line-height: 1.8;
    margin: 0 0 2rem 0;
  }

  .passion-emphasis {
    color: var(--text-heading);
    font-weight: 600;
  }

  .passion-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(166, 182, 194, 0.1);
  }

  .cat-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.25rem;
    color: var(--text-heading);
    font-weight: 500;
  }

  .cat-role {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    opacity: 0.8;
    letter-spacing: 0.05em;
  }

  /* Skills Grid */
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .skill-tag {
    padding: 0.75rem 1.5rem;
    background: var(--depth-2);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 8px;
    transition: all var(--duration-short) var(--ease-smooth);
  }

  .skill-tag:hover {
    background: rgba(42, 56, 68, 0.9);
    border-color: rgba(166, 182, 194, 0.35);
    box-shadow:
      var(--shadow-soft),
      0 0 20px rgba(166, 182, 194, 0.15);
    transform: translateY(-2px);
  }

  .skill-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: var(--text-body);
    letter-spacing: 0.02em;
    font-weight: 500;
  }

  /* Education Content */
  .education-content {
    padding: 3rem;
  }

  .education-degree {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-heading);
    margin: 0 0 1rem 0;
    letter-spacing: 0.01em;
  }

  .education-focus {
    font-size: 1.125rem;
    color: var(--text-body);
    margin: 0;
    line-height: 1.6;
  }

  /* Link Cards */
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .link-card {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background: var(--depth-2);
    backdrop-filter: var(--blur-medium);
    border: 1px solid rgba(166, 182, 194, 0.2);
    border-radius: 12px;
    text-decoration: none;
    overflow: hidden;
    box-shadow: var(--shadow-soft), var(--shadow-medium);
    transition: all var(--duration-medium) var(--ease-smooth);
  }

  .link-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(166, 182, 194, 0.2) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity var(--duration-medium) var(--ease-smooth);
    pointer-events: none;
  }

  .link-card:hover .link-glow {
    opacity: 1;
  }

  .link-card:hover {
    background: rgba(42, 56, 68, 0.9);
    border-color: rgba(166, 182, 194, 0.35);
    box-shadow:
      var(--shadow-medium),
      var(--shadow-deep),
      0 0 20px rgba(166, 182, 194, 0.15);
    transform: translateY(-4px);
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    position: relative;
    z-index: 1;
  }

  .link-label {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-heading);
  }

  .link-meta {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    letter-spacing: 0.02em;
    opacity: 0.8;
  }

  .link-arrow {
    font-size: 1.5rem;
    color: var(--highlight);
    transition: transform var(--duration-short) var(--ease-smooth);
    position: relative;
    z-index: 1;
  }

  .link-card:hover .link-arrow {
    transform: translateX(6px);
  }

  /* Scroll-based reveal */
  .float-in {
    opacity: 0;
    transform: translateY(40px);
    filter: var(--blur-light);
    transition:
      opacity var(--duration-long) var(--ease-smooth),
      transform var(--duration-long) var(--ease-smooth),
      filter var(--duration-long) var(--ease-smooth);
  }

  .float-in.is-visible {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .page-header {
      margin-bottom: 4rem;
      padding-bottom: 2.5rem;
    }

    .header-glow {
      width: 300px;
      height: 150px;
    }

    .identity-section,
    .bio-section,
    .narrative-section,
    .passion-section,
    .skills-section,
    .education-section,
    .connect-section {
      margin-bottom: 4rem;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
    }

    .header-glow {
      width: 200px;
      height: 100px;
      top: -60px;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .page-subtitle {
      font-size: 0.875rem;
    }

    .glass-card {
      padding: 2rem;
    }

    .identity-card,
    .bio-content,
    .narrative-content,
    .passion-content,
    .education-content {
      padding: 2rem;
    }

    .identity-name {
      font-size: 1.75rem;
    }

    .bio-text,
    .narrative-text {
      font-size: 1rem;
    }

    .passion-text {
      font-size: 1.0625rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }

    .identity-section,
    .bio-section,
    .narrative-section,
    .passion-section,
    .skills-section,
    .education-section,
    .connect-section {
      margin-bottom: 3rem;
    }

    .section-header {
      margin-bottom: 2rem;
    }

    .identity-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .header-glow {
      animation: none;
      opacity: 0.6;
    }

    .float-in {
      transition: none;
      opacity: 1;
      transform: none;
      filter: none;
    }

    .link-card,
    .skill-tag,
    .glass-card {
      transition: none;
    }
  }
</style>
